
<p><%= link_to "Add Photo", new_photo_path, class: "btn btn-primary" %> </p>
<% @photos.each do |p| %>
<% if p.user == current_user %>
<div class="row">
  <div class="col-xs-6 col-md-3">
      <%=image_tag(p.image, size: "220x180", alt: p.description)%>
      <div class="caption">
        <h3><%=p.description %></h3>
      </div>
      <p><%= link_to "Delete Photo", photo_path(p), method: :delete, data:{ confirm: 'Are you sure you want to delete this photo?'}, class: "btn btn-primary" %> </p>
      <p><%= link_to "Edit Photo", edit_photo_path(p), class: "btn btn-primary" %> </p>

    <%end%>
  <% end %>
</div>
</div>
