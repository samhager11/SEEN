
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class = 'scroll-box'>
<div class='container'>
  <p><%= link_to "Add Photo", new_photo_path, class: "submit-buttons" %> </p>
  <ul class="row">
    <% @photos.each do |p| %>
    <% if p.user == current_user %>
      <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
          <%=image_tag p.image%>
          <div class="caption">
            <h6><%=p.description %></h6>
          </div>
          <div class='buttons'>
          <%= link_to "Edit Photo", edit_photo_path(p), class: "submit-buttons" %>
          <%= link_to "Delete Photo", photo_path(p), method: :delete, data:{ confirm: 'Are you sure you want to delete this photo?'}, class: "submit-buttons" %>
        </div>
        </li>
        <%end%>
      <% end %>
    </ul>
  </div>
</div>

  <script type="text/javascript">

    $(document).ready(function(){
       $('li img').on('click',function(){
            var src = $(this).attr('src');
            var img = '<img src="' + src + '" class="img-responsive"/>';
            $('#myModal').modal();
            $('#myModal').on('shown.bs.modal', function(){
                $('#myModal .modal-body').html(img);
            });
            $('#myModal').on('hidden.bs.modal', function(){
                $('#myModal .modal-body').html('');
            });
       });
    })

  </script>
